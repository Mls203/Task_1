
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}





<div class="container">
    <div><h1>Contact Us</h1></div>
    <br />
    <div class="row ">
        <div class="col-md-4 bg-primary" style="margin-bottom:15px;">
            
                <div class="row text-center" style="padding:20px">
                    <div class="col-4">
                        <i class="fa fa-phone" aria-hidden="true" style="font-size:24px"></i>&nbsp;&nbsp;
                        <b style="font-size:20px">CALL US</b>
                        <p> (234) 567-891</p>
                        <p> (234) 987-654</p>
                    </div>
                </div>
                <div class="row text-center" style="padding:20px">
                    <div class="col-4">
                        <i class='fas fa-map-marker-alt' style='font-size:24px'></i>&nbsp;&nbsp;
                        <b style="font-size:20px">LOCATION</b>
                        <p>121 Rock Sreet, 21 Avenuez</p>
                        <p> New York, NY 92103-9000</p>
                    </div>
                </div>
                <div class="row text-center" style="padding:23px">
                    <div class="col-4">
                        <i class="fa fa-envelope" style="font-size:24px"></i>&nbsp;&nbsp;
                        <b style="font-size:20px">EMAIL</b>
                        <p>michela@yahoo.com</p>
                    </div>
                </div>
          
        </div>


        <div class="col-md-4" style="margin-bottom:15px;">
            <form class="my-form">
                <div class="form-group">
                    <label for="form-name">Name</label>
                    <input type="email" class="form-control" id="form-name" placeholder="Name">
                </div>
                <div class="form-group">
                    <label for="form-email">Email Address</label>
                    <input type="email" class="form-control" id="form-email" placeholder="Email Address">
                </div>
                <div class="form-group">
                    <label for="form-subject">Telephone</label>
                    <input type="text" class="form-control" id="form-subject" placeholder="Subject">
                </div>
                <div class="form-group">
                    <label for="form-message">Email your Message</label>
                    <textarea class="form-control" id="form-message" placeholder="Message"></textarea>
                </div>
                <button class="btn btn-default btn-lg btn-block" type="submit">Contact Us</button>
            </form>
        </div>


        <div class="col-md-4" style="margin-bottom:15px;">
            <div id="googlemap" style="width:100%; height:350px;"></div>
        </div>

    </div>

</div>



<script src="https://maps.googleapis.com/maps/api/js"></script>
<script type="text/javascript">
    jQuery(function ($) {
        // Google Maps setup
        var googlemap = new google.maps.Map(
            document.getElementById('googlemap'),
            {
                center: new google.maps.LatLng(44.5403, -78.5463),
                zoom: 8,
                mapTypeId: google.maps.MapTypeId.ROADMAP
            }
        );
    });
</script>